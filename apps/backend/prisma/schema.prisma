// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enum untuk status tiket agar konsisten
enum TicketStatus {
  WAITING
  SERVING
  DONE
  SKIPPED
}

enum Role {
  ADMIN
  STAFF
  GREETER
}

// User (Admin & Staff)
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String   // Hashed Password
  name      String
  role      Role     @default(STAFF)
  
  // PostgreSQL supports array types natively.
  // Menyimpan ID Counter yang ditugaskan ke staff ini.
  counters  Int[]    

  logs      AuthLog[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Mencatat riwayat Login/Logout
model AuthLog {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  
  action    String   // "LOGIN", "LOGOUT"
  ipAddress String?
  userAgent String?
  
  createdAt DateTime @default(now())
}

// Layanan (Contoh: Customer Service, Teller, Poli Umum)
model Service {
  id          Int      @id @default(autoincrement())
  name        String   // Nama Layanan
  code        String   @unique // Kode antrian (A, B, C)
  description String?
  icon        String?  // Nama icon dari library Frontend
  quota       Int      @default(0) // Kuota harian
  
  // Jam Kerja (Format HH:mm)
  startTime   String   @default("08:00") 
  endTime     String   @default("15:00")

  tickets     Ticket[] // Relasi one-to-many ke Tiket
  dailyStats  ServiceDailyStat[] // Relasi ke statistik harian
  bookings    Booking[] // Relasi ke booking online
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Hari Libur
model Holiday {
  id          Int      @id @default(autoincrement())
  date        DateTime @unique // Tanggal libur
  description String
  isActive    Boolean  @default(true)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Statistik Harian Layanan (Untuk Reporting & Histori Kuota)
model ServiceDailyStat {
  id           Int      @id @default(autoincrement())
  
  // Tanggal statistik (jam 00:00:00)
  date         DateTime 
  
  serviceId    Int
  service      Service  @relation(fields: [serviceId], references: [id])
  
  // Snapshot nilai kuota pada hari tersebut
  quotaSnapshot Int     
  
  // Jumlah tiket yang terbentuk (used quota)
  totalTickets  Int      @default(0)

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Pastikan hanya ada 1 record per layanan per hari
  @@unique([date, serviceId])
}

enum BookingStatus {
  PENDING
  USED
  EXPIRED
  CANCELLED
}

enum BookingType {
  ONLINE
  OFFLINE
}

// Booking Online
model Booking {
  id        Int           @id @default(autoincrement())
  code      String        @unique // Kode unik booking, misal: BOOK-12345
  
  serviceId Int
  service   Service       @relation(fields: [serviceId], references: [id])
  
  // Tanggal rencana kedatangan (disimpan sebagai jam 00:00:00)
  bookingDate DateTime
  
  // Waktu kedatangan aktual (diisi saat redeem/check-in)
  checkInDate DateTime?

  // Data User (dari SSO OSS)
  email           String?
  nama            String?  // Nama Pemohon / Tamu
  nib             String?
  namaPerusahaan  String?
  idProfileOss    String?

  issueDescription String? // Penjelasan kendala
  fileUrl          String? // URL file pendukung (Local/Firebase)
  
  status        BookingStatus @default(PENDING)
  jenisBooking  BookingType   @default(ONLINE)
  
  // Relasi ke Tiket (One-to-One)
  ticket    Ticket?

  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

enum CounterStatus {
  ACTIVE
  INACTIVE
  BREAK
}

// Loket (Tempat staff melayani)
model Counter {
  id        Int      @id @default(autoincrement())
  name      String   // "Loket 1", "Meja 2"
  label     String?  // Label display (opsional)
  status    CounterStatus @default(INACTIVE)
  
  tickets   Ticket[] // Relasi: Loket ini melayani tiket mana saja
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Tiket Antrian
model Ticket {
  id        Int      @id @default(autoincrement())
  
  // Nomor urut harian per layanan
  sequence  Int      
  
  // Nomor Display Full: "A-001"
  number    String   
  
  status    TicketStatus @default(WAITING)
  
  // Relasi
  service   Service @relation(fields: [serviceId], references: [id])
  serviceId Int

  counterId Int?     // Nullable karena saat waiting belum ada loket
  counter   Counter? @relation(fields: [counterId], references: [id])

  // Relasi ke Booking (Opsional, jika tiket berasal dari booking)
  bookingId Int?     @unique
  booking   Booking? @relation(fields: [bookingId], references: [id])

  // Waktu Pengerjaan
  startedAt  DateTime? // Waktu mulai dilayani (SERVING)
  finishedAt DateTime? // Waktu selesai (DONE)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Pengaturan Aplikasi (Key-Value Store)
model AppSetting {
  key       String   @id
  value     String   // Disimpan dalam format JSON String
  updatedAt DateTime @updatedAt
}
